<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_routine_btns">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageButton
            android:id="@+id/addBlank_btn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="20dp"
            android:src="@drawable/add_500dp_large"
            android:background="@drawable/round_button_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="15sp"
            android:letterSpacing="0.04"
            android:text="Add a blank routine"
            android:fontFamily="@font/atkinsonhyperlegiblenext_regular"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/import_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="14dp"
            android:text="Import Routine"
            android:fontFamily="@font/atkinsonhyperlegiblenext_regular"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:letterSpacing="0.04"
            app:strokeColor="?attr/colorOnSurface"
            app:strokeWidth="1dp"
            android:backgroundTint="?attr/colorPrimaryVariant"
            app:cornerRadius="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>