<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="WorkoutRepo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewWeek1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="35dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/success_green"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorPrimaryVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintHorizontal_bias="0.5"
        android:longClickable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/weekDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="25dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:filterTouchesWhenObscured="false"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/atkinsonhyperlegiblenext_regular"
                android:textStyle="bold"
                android:inputType="date"
                android:longClickable="true"
                android:text="MONDAY"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="40sp"
                android:letterSpacing="0.04"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0.5"
                tools:ignore="TextViewEdits"/> <!-- android:ems="10" removing this removed the touchsize too small and one another warning-->

            <TextView
                android:id="@+id/workoutType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:layout_marginHorizontal="25dp"
                android:paddingBottom="16dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:filterTouchesWhenObscured="false"
                android:focusable="false"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/atkinsonhyperlegiblenext_italic"
                android:textStyle="bold"
                android:inputType="text"
                android:longClickable="true"
                android:text="(Pre-Squat day prep)"
                android:textColor="?attr/colorAccent"
                android:textSize="20sp"
                android:letterSpacing="0.04"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/weekDay"
                app:layout_constraintVertical_bias="0"
                tools:ignore="TextViewEdits" />

            <TextView
                android:id="@+id/major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="12dp"
                android:text="Major:"
                android:textSize="18sp"
                android:fontFamily="@font/atkinsonhyperlegiblenext_medium"
                android:textColor="?attr/colorAccent"
                app:layout_constraintTop_toBottomOf="@id/workoutType"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:id="@+id/workoutsMajor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:paddingBottom="22dp"
                android:filterTouchesWhenObscured="false"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/atkinsonhyperlegiblenext_medium"
                android:text="• Quarter squats\n• Deadlift\n• Bench press\n• Overhead press"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:longClickable="true"
                android:layout_marginVertical="0dp"
                app:layout_constraintTop_toBottomOf="@id/major"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0"
                tools:ignore="TextViewEdits" /> <!-- Streak duration -->

            <TextView
                android:id="@+id/minor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="8dp"
                android:paddingBottom="12dp"
                android:text="Minor:"
                android:textSize="18sp"
                android:fontFamily="@font/atkinsonhyperlegiblenext_medium"
                android:textColor="?attr/colorAccent"
                app:layout_constraintTop_toBottomOf="@id/workoutsMajor"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:id="@+id/workoutsMinor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="4dp"
                android:filterTouchesWhenObscured="false"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/atkinsonhyperlegiblenext_medium"
                android:text="• Banded warm-ups\n• Jumps\n• Pull-ups\n• Dips"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:longClickable="true"
                android:layout_marginVertical="0dp"
                app:layout_constraintTop_toBottomOf="@id/minor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0"
                tools:ignore="TextViewEdits" /> <!-- Streak duration -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView> <!-- For cardview Date and Total-->

</androidx.constraintlayout.widget.ConstraintLayout>