<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- This is the stroke (the border) -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorAccent"/> <!-- You can change this color -->

    <!-- Optional: You can also add padding inside the shape -->
    <padding
        android:left="3dp"
        android:top="4dp"
        android:right="3dp"
        android:bottom="4dp" />
    <corners android:radius="1dp"/>

</shape>