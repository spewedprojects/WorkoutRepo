<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@+id/start_hidden"
        motion:constraintSetEnd="@+id/end_visible"
        motion:duration="180"
        motion:motionInterpolator="easeInOut">

        <OnSwipe
            motion:touchAnchorId="@id/guide_container"
            motion:touchRegionId="@id/guide_container"
            motion:touchAnchorSide="bottom"
            motion:dragDirection="dragUp" />
    </Transition>

    <ConstraintSet android:id="@+id/start_hidden">

        <Constraint android:id="@id/toolbar">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"/>
        </Constraint>

        <Constraint android:id="@id/guide_container">
            <Layout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                motion:layout_constraintTop_toBottomOf="@id/toolbar"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent" />
            <PropertySet android:visibility="gone" />
        </Constraint>

        <Constraint android:id="@id/weekPager">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                motion:layout_constraintTop_toBottomOf="@id/guide_container"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintBottom_toTopOf="@id/buttonBar"
                motion:layout_constraintHorizontal_chainStyle="packed"
                motion:layout_constraintVertical_bias="0"/>
        </Constraint>

        <Constraint android:id="@id/buttonBar">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toBottomOf="@id/weekPager"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintVertical_bias="1"/>
            <PropertySet android:visibility="visible"/>
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end_visible">

        <Constraint android:id="@id/toolbar">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"/>
        </Constraint>

        <Constraint android:id="@id/guide_container">
            <Layout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                motion:layout_constraintTop_toBottomOf="@id/toolbar"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"/>
            <PropertySet android:visibility="visible"/>
        </Constraint>

        <Constraint android:id="@id/weekPager">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                motion:layout_constraintTop_toBottomOf="@id/guide_container"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintHorizontal_chainStyle="packed"
                motion:layout_constraintVertical_bias="0"/>
        </Constraint>

        <Constraint android:id="@id/buttonBar">
            <Layout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintTop_toBottomOf="@id/weekPager"/>
            <PropertySet android:visibility="gone"/>
        </Constraint>
    </ConstraintSet>

</MotionScene>
